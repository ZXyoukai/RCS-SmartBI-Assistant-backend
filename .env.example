# Configurações do Banco de Dados
DATABASE_URL="postgresql://username:password@localhost:5432/smartbi_db"

# Configurações do JWT
JWT_SECRET="your_super_secret_jwt_key_here_make_it_very_long_and_random"
JWT_EXPIRES_IN="24h"

# Configurações da API Gemini (Google AI)
GEMINI_API_KEY="your_gemini_api_key_here"

# Configuração do Servidor
PORT=3001
NODE_ENV="development"

# URL do Frontend (para CORS)
FRONTEND_URL="http://localhost:3000"

# Configurações de Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=1000
AI_RATE_LIMIT_MAX_REQUESTS=100
CONVERSION_RATE_LIMIT_MAX_REQUESTS=10

# Configurações de Cache
AI_CACHE_EXPIRATION_HOURS=24

# Configurações de Logging
LOG_LEVEL="info"
LOG_FILE_PATH="./logs/app.log"

# Configurações de Segurança
HELMET_CSP_ENABLED=true
CORS_ENABLED=true

# Configurações de Fallback
FALLBACK_CONFIDENCE_THRESHOLD=0.4
FALLBACK_ESCALATION_ENABLED=true

# Configurações de Insights
INSIGHTS_MIN_DATA_POINTS=10
PREDICTIONS_MIN_HISTORY_DAYS=7

# Configurações de Sessão
SESSION_TIMEOUT_MINUTES=60
MAX_ACTIVE_SESSIONS_PER_USER=5

# Configurações de Upload
MAX_BODY_SIZE="10mb"
MAX_FILE_SIZE="5mb"

# Configurações do Servidor
PORT=3000
NODE_ENV="development"
FRONTEND_URL="http://localhost:3000,http://localhost:5173"

# Configurações de Rate Limiting
RATE_LIMIT_WINDOW_MS=900000  # 15 minutos em ms
RATE_LIMIT_MAX_REQUESTS=1000  # máximo de requests por janela
AI_RATE_LIMIT_MAX=100  # máximo de requests para IA por janela
CONVERSION_RATE_LIMIT_MAX=10  # máximo de conversões por minuto

# Configurações de Cache
AI_CACHE_EXPIRATION_HOURS=24  # Cache da IA válido por 24 horas

# Configurações de Logging
LOG_LEVEL="info"  # debug, info, warn, error
LOG_AI_REQUESTS=true  # Logar requisições de IA

# Configurações de Segurança
HELMET_ENABLED=true
CORS_ENABLED=true

# Configurações de Performance
JSON_LIMIT="10mb"
URL_ENCODED_LIMIT="10mb"

# Configurações de Fallback
FALLBACK_ESCALATION_THRESHOLD=4  # Nível de escalação para notificar equipe
FALLBACK_MAX_RETRIES=3  # Máximo de tentativas antes de usar fallback

# Configurações de Analytics
ENABLE_AI_ANALYTICS=true  # Habilitar coleta de analytics de IA
ANALYTICS_RETENTION_DAYS=90  # Manter dados de analytics por 90 dias

# Configurações de Desenvolvimento (apenas para development)
DEBUG_AI_RESPONSES=false  # Logar respostas completas da IA
MOCK_AI_RESPONSES=false  # Usar respostas mockadas da IA para testes
